\usepackage{xcolor}

\usecolortheme{whale} % outer
\usecolortheme{orchid} % inner

% as per https://ufba.br/sites/portal.ufba.br/files/manual_brasaoufba-v2_0.pdf
\definecolor{ufba_blue}{RGB}{41, 30, 103}

% "bg=" applies transparency
\setbeamercolor{title}{fg=ufba_blue, bg=}
\setbeamercolor{frametitle}{fg=white} % bg ignored when sidebar theme used; set by headline template
\setbeamercolor{caption name}{fg=ufba_blue}
\setbeamercolor{block title}{fg=white, bg=ufba_blue}
\setbeamercolor{block body}{fg=black, bg=}
\setbeamercolor{subtitle in head/foot}{fg=white, bg=black}
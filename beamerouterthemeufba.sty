% footline
\setbeamertemplate{footline}{
    \begin{beamercolorbox}[ht=2.5ex, dp=1.125ex, leftskip=.3cm, rightskip=.3cm]{subtitle in head/foot}
        % subject - year.semester
        \insertshortsubtitle\;-\;\the\year.\directlua{
            local m = \the\month
            local s = math.ceil(m/6)
            tex.print(s)
        }
        \hfill
        % (current section's current page/current section's total page count) current page/page count
        \directlua{
            local curr_section_page = \insertpagenumber - (\insertsectionstartpage - 1)
            local total_section_pages = \insertsectionendpage - (\insertsectionstartpage - 1)
            tex.sprint("(",curr_section_page,"/",total_section_pages,")")
        } \, \insertframenumber/\inserttotalframenumber
    \end{beamercolorbox}
}

